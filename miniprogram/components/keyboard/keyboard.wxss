page {
  background: #fff;
  height: 100%;
}

.page-box {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 1;
  left: 0;
  top: 0;
}

/* keyboard */
.pay-keyboard {
  width: 100%;
  position: absolute;
  height: 450rpx;
  background: #fff;
  bottom: 0;
  transition: bottom .5s;
}

/* pay-desc_wrap */
.pay-desc_wrap{
  /* display: flex;
  align-content: center;
  align-items: center;
  justify-content: space-between; */
  height: 70rpx;
  line-height: 70rpx;
  margin-left: 20rpx;
  color: #333;
  position: relative;
  font-size: 30rpx;
}

input{
  width: 70%;
}
.desc {
  display: flex;
  align-content: center;
  align-items: center;
  justify-content: flex-start;
  margin-top: 10rpx;
}
.value {
  position: absolute;
  right: 20rpx;
  top:0;
}

/* pay-desc_wrap */

/* pay-item */
.pay-key-container {
  position: absolute;
  width: 100%;
  /* margin: 0 auto; */
  left: 50%;
  /* top: 20rpx; */
  transform: translate(-50%);
  border-bottom: 1px solid #ccc;
  bottom: 0;
}

.pay-key-item {
  width: 24%;
  height: 90rpx;
  line-height: 90rpx;
  float: left;
  text-align: center;
  border-top: 1px solid #ccc;
  font-size:50rpx;
  /* border-bottom: 1px solid rgb(175, 175, 175); */
}
.border0 {
  border-bottom: 0;
}

.border-l1 {
  border-left: 2rpx solid #ccc;
}
